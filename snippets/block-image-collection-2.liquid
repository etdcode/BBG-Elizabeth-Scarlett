<div class="boost-pfs-filter-product-item-inner" style="
   {% if background_color.size > 0 %}
      background-color: {{ background_color }}; 
      
      {% endif %}
      {% if background_image.size > 0 %}
      background-image: url({{ background_image }});
      {% endif %}
      
      ">
    <div class="wrapper-flex">
       <div class="title" style="{% if text_color.size > 0 %} color: {{ text_color }}; {% endif %}  ">
        {% if title.size > 0 and title != 'null'  %}
        {{ title }}
       {% endif %}
      </div>
      <div class="content" style="{% if text_color.size > 0 %} color: {{ text_color }}; {% endif %}">
        {% if content.size > 0  and content != 'null'  %}
        {{ content }}
       {% endif %}
       </div>
      <div class="line" style="{% if text_color.size > 0 %}background: {{ text_color }};  {% endif %}"></div>
      <div class="img-card" >
      {% if signature contains '</svg>' %}
         {{ signature }}
      {% else %}
         {% if signature.size > 0 %}
           <img src="{{ signature }}" alt="signature">
         {% endif %}
      {% endif %}
      </div>
    </div>
</div>
    