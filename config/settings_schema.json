[
  {
    "name": "theme_info",
    "theme_name": "Themekit template theme",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https:\/\/github.com\/Shopify\/themekit",
    "theme_support_url": "https:\/\/github.com\/Shopify\/themekit\/issues"
  },
  {
    "name": "Global Product Settings",
    "settings": [
      {
        "type": "radio",
        "id": "product_default_option_type",
        "label": "Default Option Type",
        "options": [
          {
            "value": "dropdowns",
            "label": "Dropdown Selects"
          },
          {
            "value": "swatches",
            "label": "Swatches"
          },
          {
            "value": "single",
            "label": "Single Select"
          }
        ],
        "default": "dropdowns"
      },
      {
        "type": "checkbox",
        "id": "show_recommended",
        "label": "Show Recommended",
        "default": false
      }
    ]
  },
  {
    "name": "Minicart Settings",
    "settings": [
      {
        "type": "header",
        "content": "Free Shipping Bar"
      },
      {
        "type": "checkbox",
        "id": "minicart_free_shipping",
        "label": "Enable free shipping bar?",
        "default": false
      },
      {
        "type": "text",
        "id": "minicart_free_shipping_threshold",
        "label": "Free shipping threshold",
        "default": "150.00",
        "info": "Amount without currency e.g. 99.99 or 150.00"
      },
      {
        "type": "text",
        "id": "minicart_free_shipping_under",
        "label": "Message when customer is under threshold",
        "default": "Spend another {{ amount }} to qualify for free shipping.",
        "info": "The shortcode {{ amount }} will be replaced with the remaining amount to qualify."
      },
      {
        "type": "text",
        "id": "minicart_free_shipping_qualified",
        "label": "Message when threshold is reached",
        "default": "Yay! You qualified for free shipping."
      },
      {
        "type": "header",
        "content": "Treat Yourself"
      },
      {
        "type": "text",
        "id": "heading_treat_yourself",
        "label": "Heading"
      },
      {
        "type": "collection",
        "id": "collection_treat_yourself",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "number_product",
        "min": 3,
        "max": 10,
        "step": 1,
        "label": "Show number product",
        "default": 5
      }
    ]
  },
  {
    "name": "Cart Settings",
    "settings": [
      {
        "type": "header",
        "content": "Free Shipping Bar"
      },
      {
        "type": "checkbox",
        "id": "cart_free_shipping",
        "label": "Enable free shipping bar?",
        "default": false
      },
      {
        "type": "text",
        "id": "cart_free_shipping_threshold",
        "label": "Free shipping threshold",
        "default": "150.00",
        "info": "Amount without currency e.g. 99.99 or 150.00"
      },
      {
        "type": "text",
        "id": "cart_free_shipping_under",
        "label": "Message when customer is under threshold",
        "default": "Spend another {{ amount }} to qualify for free shipping.",
        "info": "The shortcode {{ amount }} will be replaced with the remaining amount to qualify."
      },
      {
        "type": "text",
        "id": "cart_free_shipping_qualified",
        "label": "Message when threshold is reached",
        "default": "Yay! You qualified for free shipping."
      },
      {
        "type": "header",
        "content": "Collection"
      },
      {
        "type": "collection",
        "id": "collection_cart",
        "label": "Collection"
      }
    ]
  },
  {
    "name": "Account Settings",
    "settings": [
      {
        "type": "image_picker",
        "id": "account_background",
        "label": "Account Banner Background Image"
      }
