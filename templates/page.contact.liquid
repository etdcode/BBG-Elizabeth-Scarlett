<div class="page-wrapper ancillary-wrapper">
  <h1 class="section__heading text-center">{{ page.title }}</h1>

  <div class="contact-wrapper">
    <div class="contact__form">
      <div class="contact__desc">
        <div class="section__desc page-content">{{ page.content }}</div>
      </div>

      {% form 'contact', class: 'form' %}
        <div class="form__row">
          <label class="section__subheading" for="ContactFormName">{{ 'contact.form.name' | t }}</label>
          <input type="text" id="ContactFormName" name="contact[name]">
        </div>
        
        <div class="form__row">
          <label class=" section__subheading" for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
          <input type="email" id="ContactFormEmail" name="contact[email]">
        </div>
        
        <div class="form__row">
          <label class="section__subheading" for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
          <input type="tel" id="ContactFormPhone" name="contact[phone]">
        </div>
        
        <div class="form__row">
          <label class="section__subheading" for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
          <textarea rows="5" id="ContactFormMessage" name="contact[body]"></textarea>  
        </div>

        <div class="form__row">
          <button class="btn-secondary" type="submit">{{ 'contact.form.submit' | t }}</button>
        </div>

        <div class="text-center">
          {% if form.posted_successfully? %} <div class="footer__text">{{ 'contact.form.confirmation' | t }}</div> {% endif %}
          <div class="footer__text">{{ form.errors | default_errors }}</div>
        </div>
      {% endform %}
    </div>
  </div>
</div>
