<!-- /templates/customers/reset_password.liquid -->
<div class="col-md-4 offset-md-4 p-6">
    <div class="login-page__form-container form py-6" id="login-form">
      <h1 class="login-page__title">Reset Password</h1>
  
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}
  
        <div class="form-module mb-3">
          <label for="CustomerPassword">Enter your password</label>
          <input
            name="customer[password]"
            id="CustomerPassword"
            type="password"
            placeholder="••••••••••"
          />
        </div>
  
        <div class="form-module mb-3">
          <label for="CustomerPasswordConfirmation">Confirm Password</label>
          <input
            name="customer[password_confirmation]"
            id="CustomerPasswordConfirmation"
            type="password"
            placeholder="••••••••••"
          />
        </div>
  
        <div class="form-group">
          <button type="submit" class="form-submit btn btn-cta">Reset Password</button>
        </div>
      {% endform %}
    </div>
  </div>