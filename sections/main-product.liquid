            {% endif %}
            {% if product.metafields.custom.icon_text_3 != blank %}
              <span class="text">{{ product.metafields.custom.icon_text_3 }}</span>
            {% endif %}
          </div>
        {% else %}
          {% for block in section.blocks limit:1 offset:2 %}
            <div class="icon-item">
              {% if block.settings.icon != blank %}
