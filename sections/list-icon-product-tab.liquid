{%- if section.blocks.size > 0 -%}
<div class="wrapper">
	{%- for block in section.blocks -%}
		<div class="item">
			<div class="d-flex align-items-center">
				<div class="img">
					<img src="{{ block.settings.icon | img_url: '57x' }}" alt="">
				</div>
				<div class="info">
					{%- if block.settings.heading != blank -%}
						<div class="heading">{{ block.settings.heading }}</div>
					{%- endif -%}

					{%- if block.settings.content != blank -%}
						<div class="content">{{ block.settings.content }}</div>
					{%- endif -%}
				</div>
			</div>
		</div>
	{%- endfor -%}
</div>
{%- endif -%}

{% schema %}
{
	"name": "Section product tab",
	"class": "section--list-icon-product-tab",
	"blocks": [
		{
			"type": "icon",
			"name": "Icon",
			"settings": [
				{
					"type": "image_picker",
					"id": "icon",
					"label": "Icon"
				},
				{
					"type": "text",
					"id": "heading",
					"label": "Heading"
				},
				{
					"type": "textarea",
					"id": "content",
					"label": "Content"
				}
			]
		}
	]
}
{% endschema %}
