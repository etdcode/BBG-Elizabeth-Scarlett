<section class="fdb-block">
    <div class="container p-5">
      <div class="row text-center">
        <div class="col-12">
          <h2>Featured Blog</h2>
          <p class="lead"><a href="#">See all features <i class="fas fa-angle-right"></i></a>
          </p>
        </div>
      </div>
  
      <div class="row text-center justify-content-center mt-5">
        <div class="col-10 col-sm-3">
          <img alt="image" class="img-fluid rounded" src="./imgs/hero/blue.svg">
          <h3><strong>Feature One</strong></h3>
        </div>
        <div class="col-10 col-sm-3 pt-5 pt-sm-0">
          <img alt="image" class="img-fluid rounded" src="./imgs/hero/red.svg">
          <h3><strong>Feature Two</strong></h3>
        </div>
  
        <div class="col-10 col-sm-3 pt-5 pt-sm-0">
          <img alt="image" class="img-fluid rounded" src="./imgs/hero/purple.svg">
          <h3><strong>Feature Three</strong></h3>
        </div>
  
        <div class="col-10 col-sm-3 pt-5 pt-sm-0">
          <img alt="image" class="img-fluid rounded" src="./imgs/hero/yellow.svg">
          <h3><strong>Feature Four</strong></h3>
        </div>
      </div>
    </div>
  </section>

  {% schema %}
  {
    "name": "Blog posts",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Colour",
        "default": "#fdd045"
      },
      {
        "id": "image",
        "label": "Image",
        "type": "image_picker"
      },
      {
        "id": "title",
        "label": "Title",
        "type": "text",
        "default": "How do we work?"
      },
      {
        "id": "content",
        "label": "Text",
        "type": "textarea",
        "default": "Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren."
      },
      {
        "id": "button_text",
        "label": "Button Text",
        "type": "text",
        "default": "See Our Story"
      },
      {
        "id": "button_url",
        "label": "Button Link",
        "type": "url"
      }
      
    ],
    "presets": [
      {
        "category": "Homepage Sections",
        "name": "Blog posts"
      }
    ]
  }
  {% endschema %}