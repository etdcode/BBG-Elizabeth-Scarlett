{{ "alternative-collection.css" | asset_url | stylesheet_tag }}

<div class="hid" style="display: none;">
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'rich_text_and_image' %}
                {% render 'alt-image-collection-1' block: block %} 
            {% when 'video' %}
                {% render 'video-block' block: block %} 
            {% when 'qoute' %}
                {% render 'qoute-block' block: block %} 
            {% when 'cookie' %}
                Thicookie
        {% endcase %}
    {% endfor %}
</div>

<div class="filter-customize" data-url="{{ collection.url }}">
    {% render 'collection-template' with section %}
</div>

